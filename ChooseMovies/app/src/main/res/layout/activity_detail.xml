<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.oromar.dev.android.choosemovies.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backdrop_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView android:id="@+id/movie_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="35dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="10dp"
                    android:elegantTextHeight="true"
                    android:textColor="#ffffff"/>
            </FrameLayout>


            <LinearLayout
                android:id="@+id/image_area_linear_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/detail_image_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingRight="30dp"/>

                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/relase_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:paddingBottom="10dp"/>

                    <TextView
                        android:id="@+id/rate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textStyle="italic"
                android:elegantTextHeight="true"
                android:id="@+id/overview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
